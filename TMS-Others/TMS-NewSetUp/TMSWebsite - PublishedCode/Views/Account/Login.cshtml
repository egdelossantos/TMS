@model TerritoryManagementSystem.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<hgroup class="title">
    <h4>@ViewBag.Title</h4>
</hgroup>

@*<section id="loginForm">  *@
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Log in Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
                <div style="margin-bottom:20px;margin-top:-8px;">
                    <span>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword", null, new { style = "text-decoration:underline; color:#08c;" })
                    </span>
                </div>
            </li>
            <li>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </li>
        </ol>        
    </fieldset>
    <div class="register" style="margin-top:5px; margin-left:25px;">
        <span>
            <input type="submit" value="Log in" class="btn btn-info" />
        </span>
        <span>
            Click @Html.ActionLink("here", "Register", null, new { style = "text-decoration:underline; color:#08c;" }) to register your password.
        </span>
    </div>


}
@*</section>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
