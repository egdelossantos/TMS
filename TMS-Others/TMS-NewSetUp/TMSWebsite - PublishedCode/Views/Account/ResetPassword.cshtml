@{
    ViewBag.Title = "Reset Password";
}

<hgroup class="title">
    <h4>@ViewBag.Title</h4>
</hgroup>

@if (ViewData["Password Changed"] != null)
{
    <script  type="text/javascript">
        window.onload = function() {
            var infoIco = '@Url.Content("~/Content/images/icons/ico_info48.png")';
            showDialog('alert', 'Password changed', '<p class="left">Password changed successfully.</p>', infoIco, function() {
                location.href = '@Url.Action("Index", "Jobs")';
            });
        }
    </script>
}

@using (Html.BeginForm())
{
    <div class="form">
        <fieldset>                                
            <div class="field textFieldWrap">
                @Html.Label("New Password")
                @Html.Password("newPassword", null, new { maxLength = "20" })
                @Html.ValidationMessage("newPassword", "")
            </div>
            <div class="field textFieldWrap">
                @Html.Label("Confirm New Password")
                @Html.Password("confirmNewPassword", null, new { maxLength = "20" })
                @Html.ValidationMessage("confirmNewPassword", "")
            </div>

            @Html.Hidden("id")
        </fieldset>

        <div style="margin-top:30px;">
            <input type="submit" value="  Ok  " class="btn btn-info" />
            <input type="button" onclick="window.location.href='@Url.Action("Index", "Home")'" value="Cancel" class="btn btn-info" />
        </div>
    </div>
}
