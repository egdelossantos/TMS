@model TerritoryManagementSystem.Models.ForgotPasswordModel
@{
    ViewBag.Title = "Forgot Password";
}

<hgroup class="title">
    <h4>@ViewBag.Title</h4>    
</hgroup>

@if (ViewData["notification"] != null)
{
   <div>
       <h5>
           @ViewData["notification"]
       </h5>
   </div>
    
    <div style="margin-top:25px;">       
        <input type="button" onclick="window.location.href='@Url.Action("Index", "Home")'" value="Back" class="btn btn-primary" />
    </div> 
}
else
{ 
    using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <fieldset>
            <ol>
                <li>
                    @Html.LabelFor(m => m.EmailAddress)
                    @Html.TextBoxFor(m => m.EmailAddress)
                </li>
            </ol>
            <div style="margin-left:25px;margin-top:-20px;margin-bottom:30px;">
                <p>To reset your password, please enter email address you use to register.</p>
            </div>                 
        </fieldset>
        <div style="margin-left: 25px; margin-top: 10px;">
            <input type="submit" value="Reset Password" class="btn btn-info" />
            <input type="button" onclick="window.location.href='@Url.Action("Index", "Home")'" value="Back" class="btn btn-default" />
        </div>  
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
