@using TMS.Web.Helpers
@using TerritoryManagementSystem.Models
@model TerritoryManagementSystem.Models.MapsAllowedToBeReleasedModel

@{
    ViewBag.Title = "Set Maps To Be Released";
    ActionBarModel actionBarModel = new ActionBarModel(ViewBag.Title, Url.Action("Index", "CallActivity")) { ShowSaveExit = true };
}

@section actionBar
{
    @Html.Partial("_ViewActionBar", actionBarModel)
}

<div>
    @using (Html.BeginForm("MapsAllowedToBeReleased", "Map", FormMethod.Post))
    {
        <input id="btnsave" type="submit" class="hide" />
        
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>#</th>
                <th class="span8">
                    Available Maps
                </th>
                <th class="span4" style="text-align:center">
                    Allow?
                </th>
            </tr>

            @for (var i = 0; i < Model.AvailableMaps.Count; i++)
            {
                
                var num = i + 1;
                
                <tr>
                    <td>
                        <b>@num</b>
                    </td>
                    <td class="span8">
                        @Html.HiddenFor(m => m.AvailableMaps[i].Id)
                        @Model.AvailableMaps[i].CallGroupDetails
                    </td>
                    <td class="span4" style="text-align:center">
                        @Html.CheckBoxFor(m => m.AvailableMaps[i].AllowAssistantToRelease)
                    </td>
                </tr>
            }
            </table>
        </div>
    }
</div>
