@using TMS.Web.Helpers
@using TerritoryManagementSystem.Models
@model TerritoryManagementSystem.Models.AddressBestRouteModel

@{
    ViewBag.Title = "Best Route";    
}

@section actionBar
{
    @Html.Partial("_ViewActionBar", new ActionBarModel(ViewBag.Title))
}

<style>
    * {
        box-sizing: border-box;
    }

    /* Create two equal columns that floats next to each other */
    .column {
        float: left;
        width: 50%;
        padding: 10px;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
</style>

@using (Html.BeginForm("AddressBestRoute", "Map", FormMethod.Post))
{
    <div style="margin:10px;">
        <text>
            <button class="btn btn-info" type="submit">Get Best Route</button>
        </text>
    </div>
    <div class="row">
        <div class="column">
            <div>
                @Html.LabelFor(m => m.OriginAddress)
                @Html.TextAreaFor(m => m.OriginAddress, new { style = "width: 100%; height:100px;font-size:12px;" })

                @Html.LabelFor(m => m.DestinationAddress)
                @Html.TextAreaFor(m => m.DestinationAddress, new { style = "width: 100%; height:280px;font-size:12px;" })
            </div>
        </div>

        <div class="column">
            @Html.Label("Best Route:")
            @Html.TextAreaFor(m => m.Result, new { style = "width: 100%; height:100px;font-size:12px;" })
        </div>
    </div>
}
